<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="150dp">
                <refractored.controls.CircleImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imgCharacter"
                    android:src="@drawable/female_placeholder"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorPrimaryDark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_toRightOf="@id/imgCharacter"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:textColor="@color/colorWhite"
                    android:maxWidth="130dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@id/imgCharacter"
                    android:layout_below="@id/txtName"
                    android:id="@+id/txtStatus"
                    android:maxLines="1"
                    android:text=""
                    android:maxLength="20"
                    android:textSize="10sp"
                    android:maxWidth="130dp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/small_margin">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/layoutButton">
                <ImageButton
                    android:id="@+id/fabSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@android:color/transparent"
                    android:src="@drawable/background_button_send" />
                <ImageButton
                    android:id="@+id/fabRec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@android:color/transparent"
                    android:src="@drawable/background_button_mic"
                    android:visibility="invisible" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/layoutSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/layoutButton"
                android:background="@drawable/ic_background_white"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingEnd="6dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="6dp"
                android:paddingTop="3dp">
                <ImageButton
                    android:id="@+id/btAttach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/background_button_attach" />
                <EditText
                    android:id="@+id/txtContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Type your message here"
                    android:inputType="textShortMessage|textMultiLine"
                    android:isScrollContainer="true"
                    android:maxHeight="100dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/controller"
            android:id="@+id/container">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeLoadMore"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerChat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.SwipeRefreshLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/attachToolbox" />
        </FrameLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>