<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/btTakeImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/tiny_margin"
                android:src="@drawable/ic_camera_white_24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_circle_white_green" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/btTakeVideo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/tiny_margin"
                android:layout_gravity="center"
                android:src="@drawable/ic_videocam_white_24dp"
                android:background="@drawable/ic_circle_white_green" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/btReadImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/tiny_margin"
                android:layout_gravity="center"
                android:src="@drawable/ic_insert_photo_white_24dp"
                android:background="@drawable/ic_circle_white_green" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/btReadVideo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/tiny_margin"
                android:layout_gravity="center"
                android:src="@drawable/ic_video_library_white_24dp"
                android:background="@drawable/ic_circle_white_green" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/btAttachFile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/tiny_margin"
                android:layout_gravity="center"
                android:src="@drawable/ic_folder_white_24dp"
                android:background="@drawable/ic_circle_white_green" />
        </FrameLayout>
    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>