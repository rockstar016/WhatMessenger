<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="Provide Your E-mail Address"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_large_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDescription"
        style="@style/secondaryCenterAlignedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="We'll send you request code to your email address" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nav_header_vertical_spacing">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawableTint="@color/secondaryTextColor"
            android:drawablePadding="@dimen/small_margin"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_component_size"
        android:layout_marginRight="@dimen/default_component_size"
        android:background="@color/colorPrimary"
        android:text="next"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_small_size" />
    <Button
        android:id="@+id/btHaveCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_component_size"
        android:layout_marginRight="@dimen/default_component_size"
        android:background="@android:color/transparent"
        android:text="I already have request code"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_small_size" />
</LinearLayout>