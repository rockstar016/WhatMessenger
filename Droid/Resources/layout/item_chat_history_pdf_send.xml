<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:id="@+id/message_root_layout"
        android:layout_gravity="right"
        android:background="@drawable/ic_chat_send"
        android:padding="@dimen/small_margin">
        <ImageView
            android:id="@+id/txtContent"
            android:scaleType="centerCrop"
            android:src="@drawable/pdflogo"
            android:padding="@dimen/default_margin"
            android:layout_width="160dp"
            android:layout_height="160dp" />
        <FrameLayout
            android:id="@+id/containerCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:id="@+id/pgLoading" />
            <ImageButton
                android:id="@+id/btSendCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_white_24dp"
                android:background="@android:color/transparent"
                android:tint="@color/colorAccent"
                android:layout_gravity="center" />
        </FrameLayout>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/srcStatus"
            android:tint="@color/secondaryTextColor"
            android:src="@drawable/ic_done_all_black_24dp"
            android:layout_alignRight="@id/txtContent"
            android:layout_below="@id/txtContent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTimeStamp"
            android:textColor="@color/secondaryTextColor"
            android:text="08:02"
            android:textSize="10sp"
            android:minWidth="60dp"
            android:layout_toLeftOf="@id/srcStatus"
            android:layout_below="@id/txtContent"
            android:padding="@dimen/small_margin" />
    </RelativeLayout>
</FrameLayout>