<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:id="@+id/message_root_layout"
        android:layout_gravity="left"
        android:background="@drawable/ic_chat_reply"
        android:padding="@dimen/small_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:id="@+id/senderName"
            android:layout_margin="8dp"
            android:textSize="10sp"
            android:text="sender name will be here"
            android:layout_alignParentTop="true" />
        <FFImageLoading.Views.ImageViewAsync
            android:layout_below="@id/senderName"
            android:id="@+id/txtContent"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTimeStamp"
            android:textSize="10sp"
            android:text="08:24"
            android:layout_alignRight="@id/txtContent"
            android:layout_marginTop="@dimen/fab_margin"
            android:minWidth="60dp"
            android:layout_below="@id/txtContent" />
    <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgFavoriteIndicator"
            android:src="@drawable/ic_favorite_white_24dp"
            android:layout_below="@id/txtContent"
            android:visibility = "gone"
            android:layout_marginTop="@dimen/small_margin" />-->
    </RelativeLayout>
</FrameLayout>