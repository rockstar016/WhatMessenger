<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="primaryTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="secondaryTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">gravity</item>
    </style>
     <style name="notificationTextStyle">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_radius_notification_background</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
	<style name="primaryCenterAlignedText" parent="primaryTextStyle">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="secondaryCenterAlignedText" parent="secondaryTextStyle">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
	<style name="RightNextButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_black_24dp</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_black_24dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/default_margin</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">start|left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:paddingStart">@dimen/fab_margin</item>
    </style>

     <style name="LeftAlignButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
    </style>
</resources>
